{
  "name": "vite-single-spa",
  "version": "1.0.0",
  "description": "Vite + Single-SPA microfrontend test project",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:root\" \"npm run dev:home\"",
    "dev:root": "cd root-config && npm run dev",
    "dev:home": "cd home && npm run dev",
    "build": "npm run build:root && npm run build:home",
    "build:root": "cd root-config && npm run build",
    "build:home": "cd home && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}